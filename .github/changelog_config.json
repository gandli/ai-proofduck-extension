{
  "mode": "COMMITS",
  "ignore_not_merges": false,
  "categories": [
    {
      "title": "ğŸš€ Features",
      "labels": ["feature", "enhancement"]
    },
    {
      "title": "ğŸ› Fixes",
      "labels": ["fix", "bug"]
    },
    {
      "title": "ğŸ§ª Testing",
      "labels": ["test"]
    },
    {
      "title": "ğŸ›  Refactoring",
      "labels": ["refactor"]
    },
    {
      "title": "ğŸ“ Documentation",
      "labels": ["documentation"]
    },
    {
      "title": "ğŸ§¹ Chore",
      "labels": ["chore"]
    }
  ],
  "ignore_labels": [
    "ignore"
  ],
  "template": "${{CHANGELOG}}\n\n<details>\n<summary><b>Full Changelog</b></summary>\n${{RELEASES}}\n</details>",
  "pr_template": "- ${{TITLE}} #${{NUMBER}} by @${{AUTHOR}}",
  "empty_template": "No significant changes in this release.",
  "label_extractor": [
    {
      "pattern": "^(feat|feature|enhancement)(\\(.*\\))?:",
      "target": "feature"
    },
    {
      "pattern": "^(fix|bug)(\\(.*\\))?:",
      "target": "fix"
    },
    {
      "pattern": "^refactor(\\(.*\\))?:",
      "target": "refactor"
    },
    {
      "pattern": "^test(\\(.*\\))?:",
      "target": "test"
    },
    {
      "pattern": "^docs(\\(.*\\))?:",
      "target": "documentation"
    },
    {
      "pattern": "^chore(\\(.*\\))?:",
      "target": "chore"
    }
  ]
}
